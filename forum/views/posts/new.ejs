<%include ../partials/header %>

<div class="container">

        <h1 style="text-align:center;">Create a new Post </h1>
        
            <div class="row">
                <div style="width:30% ; margin : 25px auto ;">
                    <form action="/posts" method="POST">
                        <div class="form-group">
                            <label for="name">Title</label>
                            <input class="form-control" type="text" placeholder="title" name="name" id="name">
                        </div>
                        <div class="form-group">
                             <label for="description">Issue</label>
                             <textarea class="form-control" type="text" rows="4" placeholder="issue" id="description" name="description"></textarea>
                        </div>
                        <div class="form-group">
                             <button class="btn btn-primary btn-lg btn-block " >Submit</button>
                        </div>
                       
                    </form>
                    <a href="/posts" class="btn btn-default">Go Back</a>
                </div>
            </div>
        </div>
<%include ../partials/footer %>